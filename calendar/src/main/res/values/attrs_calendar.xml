<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseCalendarView">
        <!--今天，当月日期颜色，上个月和下个月日期颜色,周六日期颜色，
        周日日期颜色，选中日期的描边颜色，未选中日期的描边颜色，背景颜色-->
        <attr name="today_color" format="color|reference" />
        <attr name="cur_month_date_color" format="color|reference" />
        <attr name="other_month_date_color" format="color|reference" />
        <attr name="saturday_color" format="color|reference" />
        <attr name="sunday_color" format="color|reference" />
        <attr name="selected_stroke_color" format="color|reference" />
        <attr name="normal_stroke_color" format="color|reference" />
        <attr name="bg_color" format="color|reference" />
        <!--日期字体大小，描边大小-->
        <attr name="date_size" format="dimension" />
        <attr name="normal_stroke_size" format="dimension" />
        <attr name="selected_stroke_size" format="dimension" />
        <!--日历类型：周历，月历-->
        <attr name="calendar_type" format="integer">
            <enum name="month" value="1" />
            <enum name="week" value="2" />
        </attr>
        <!--viewpager可以显示的月数限制，比如1200，100年-->
        <attr name="month_count" format="integer" />
        <!--viewpager可以显示的周数限制，比如6000，大约100年-->
        <attr name="week_count" format="integer" />
        <!--数据：时间字体大小，金钱字体大小、波浪图描边宽度-->
        <attr name="hour_icon_size" format="dimension" />
        <attr name="hour_data_size" format="dimension" />
        <attr name="money_data_size" format="dimension" />
        <attr name="wave_view_stroke_size" format="dimension" />
        <!--波浪图描边颜色，波浪图填充颜色-->
        <attr name="wave_view_stroke_color" format="color|reference" />
        <attr name="wave_view_fill_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="CalendarContentLayout">
        <attr name="auto_change_month_row" format="boolean" />
        <attr name="default_calendar_type" format="integer" />
    </declare-styleable>

    <declare-styleable name="RecordRecycleView">
        <attr name="header_view_layout" format="reference" />
    </declare-styleable>
</resources>